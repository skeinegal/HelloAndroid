<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="64dp"
        android:text="Welcome to Udacity"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/office_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/welcome_text_view"
        android:scaleType="centerCrop"
        android:src="@drawable/udacity" />


    <ImageButton
        android:id="@+id/house_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/udacity_text_view"
        android:src="@drawable/place" />

    <TextView
        android:id="@+id/udacity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/street_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text="Udacity"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/street_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_alignTop="@id/street_text_view"
        android:src="@drawable/street" />

    <TextView
        android:id="@+id/street_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/mountain_text_view"
        android:layout_marginStart="42dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="2465 Latham St,"
        android:textSize="22sp"/>

    <ImageButton
        android:id="@+id/mountain_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_alignTop="@id/mountain_text_view"
        android:src="@drawable/map"
         />

    <TextView
        android:id="@+id/mountain_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/contact_text_view"
        android:layout_marginStart="42dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="Mountain View, CA 94043"
        android:textSize="22sp"/>

    <ImageButton
        android:id="@+id/phone_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_alignTop="@id/contact_text_view"
        android:src="@drawable/phone"
        android:visibility="visible" />

    <TextView
        android:id="@+id/contact_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/banner_image_view"
        android:layout_marginStart="42dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="650-555-5555"
        android:textSize="22sp"/>

    <ImageView
        android:id="@+id/banner_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/udacity2" />

</RelativeLayout>